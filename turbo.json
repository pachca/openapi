{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "generate": {
      "dependsOn": ["setup", "^generate"],
      "inputs": ["typespec.tsp", "tspconfig.yaml"],
      "outputs": ["openapi.yaml", "generated/**"],
      "cache": true
    },
    "setup": {
      "cache": false
    },
    "generate-llms": {
      "dependsOn": ["@pachca/spec#generate"],
      "inputs": ["scripts/generate-llms.ts", "scripts/skills/**", "lib/**", "content/**"],
      "outputs": ["public/llms.txt", "public/llms-full.txt", "public/skill.md", "public/index.md", "public/guides/**", "public/**/*.md", "public/.well-known/**", "public/pachca.postman_collection.json"],
      "cache": true
    },
    "build": {
      "dependsOn": ["@pachca/spec#generate", "generate-llms"],
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["@pachca/spec#generate", "generate-llms"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "typecheck": {
      "cache": true
    },
    "knip": {
      "cache": true
    },
    "format:check": {
      "cache": true
    },
    "check": {
      "dependsOn": ["lint", "typecheck", "knip", "format:check"],
      "cache": false
    },
    "check-urls": {
      "dependsOn": ["@pachca/spec#generate"],
      "cache": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
